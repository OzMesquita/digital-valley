  <servlet>
    <servlet-name>CadastroServidor</servlet-name>
    <servlet-class>controller.CadastrarModulo</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>RecuperarSenha</servlet-name>
    <servlet-class>controller.RecuperarSenha</servlet-class>
