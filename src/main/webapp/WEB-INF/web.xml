<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <display-name>digital-valley</display-name>
    <servlet-mapping>
        <servlet-name>RecuperarSenha</servlet-name>
        <url-pattern>/RecuperarSenha</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
    <!-- Servlets -->
    <!-- 1 -->
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>controller.Login</servlet-class>
    </servlet>
    <!-- 2 -->
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>controller.Logout</servlet-class>
    </servlet>
    <!-- 3 -->
    <servlet>
        <servlet-name>Verificação</servlet-name>
        <servlet-class>controller.VerificarCadastro</servlet-class>
    </servlet>
    <!-- 4 -->
    <servlet>
        <servlet-name>Importacao</servlet-name>
        <servlet-class>controller.ImportacaoController</servlet-class>
    </servlet>
    <!-- 5 -->
    <servlet>
        <servlet-name>EditarUsuario</servlet-name>
        <servlet-class>controller.EditarUsuarioController</servlet-class>
    </servlet>
    <!-- 6 -->
    <servlet>
        <servlet-name>pesquisaModulos</servlet-name>
        <servlet-class>controller.PesquisaModulos</servlet-class>
    </servlet>
    <!-- 7 -->
    <servlet>
        <servlet-name>pesquisaUsuario</servlet-name>
        <servlet-class>controller.PesquisaUsuario</servlet-class>
    </servlet>
    <!-- 8 -->
    <servlet>
        <servlet-name>CadastraAluno</servlet-name>
        <servlet-class>controller.CadastrarAluno</servlet-class>
    </servlet>
    <!-- 9 -->
    <servlet>
        <servlet-name>CadastraServidor</servlet-name>
        <servlet-class>controller.CadastrarServidor</servlet-class>
    </servlet>
    
    <!-- 10 -->
    <servlet>
        <servlet-name>PreCadastroServidor</servlet-name>
        <servlet-class>controller.ImportarServidorController</servlet-class>
    </servlet>
    
    <!-- Mapaeamento Servlets  -->
    <!-- 1 -->
    <servlet>
        <servlet-name>RecuperarSenha</servlet-name>
        <servlet-class>controller.RecuperarSenha</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <!-- 2 -->
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/view/logout</url-pattern>
    </servlet-mapping>
    <!-- 3 -->
    <servlet-mapping>
        <servlet-name>Verificação</servlet-name>
        <url-pattern>/verificacao</url-pattern>
    </servlet-mapping>
    <!-- 4 -->
    <servlet-mapping>
        <servlet-name>Importacao</servlet-name>
        <url-pattern>/view/adm/importarAlunos</url-pattern>
    </servlet-mapping>
    <!-- 5 -->
    <servlet-mapping>
        <servlet-name>EditarUsuario</servlet-name>
        <url-pattern>/view/editarUsuario</url-pattern>
    </servlet-mapping>
    <!-- 6 -->
    <servlet-mapping>
        <servlet-name>pesquisaModulos</servlet-name>
        <url-pattern>/view/adm/pesquisaModulos</url-pattern>
    </servlet-mapping>
    <!-- 7 -->
    <servlet-mapping>
        <servlet-name>pesquisaUsuario</servlet-name>
        <url-pattern>/view/adm/pesquisaUsuario</url-pattern>
    </servlet-mapping>
    <!-- 8 -->
    <servlet-mapping>
        <servlet-name>CadastraAluno</servlet-name>
        <url-pattern>/cadastro/cadastroAluno</url-pattern>
    </servlet-mapping>
    <!-- 9 -->
    <servlet-mapping>
        <servlet-name>CadastraServidor</servlet-name>
        <url-pattern>/cadastro/cadastroServidor</url-pattern>
    </servlet-mapping>
    
    <!-- 10 -->
    <servlet-mapping>
        <servlet-name>PreCadastroServidor</servlet-name>
        <url-pattern>/view/adm/importarServidor</url-pattern>
    </servlet-mapping>
    <!-- Filtros -->
    <!-- 1 -->
    <filter>
        <filter-name>Autentica</filter-name>
        <filter-class>controller.AutenticacaoFiltro</filter-class>
    </filter>
    <!-- 2 -->
    <filter>
        <filter-name>Cadastro</filter-name>
        <filter-class>controller.CadastroFiltro</filter-class>
    </filter>
    <!-- Mapaeamento Filtros  -->
    <!-- 1 -->
    <filter-mapping>
        <filter-name>Cadastro</filter-name>
        <url-pattern>/cadastro/*</url-pattern>
    </filter-mapping>
    <!-- 2 -->
    <filter-mapping>
        <filter-name>Autentica</filter-name>
        <url-pattern>/view/*</url-pattern>
    </filter-mapping>
</web-app>
